<!DOCTYPE html>
<html>
  <%- include('../partials/head')  %> 
  <body>
    <%- include('./partials/header')  %> 
    <main class="my-5">
        <div class="container">
            <table class="table table-responsive table-striped table-responsive">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Patente</th>
                    <th scope="col">AÃ±o</th>
                    <th scope="col">Color</th>
                    <th scope="col">Kilometraje</th>
                    <th scope="col">Vendido</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cuotas</th>
                    <th scope="col">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% autos.forEach(auto => { %>
                    <tr>
                      <th scope="row"><%= auto.id %> </th>
                      <td><%= auto.marca %></td>
                      <td><%= auto.modelo %></td>
                      <td><%= auto.patente %></td>
                      <td><%= auto.anio %></td>
                      <td><%= auto.color %></td>
                      <td><%= auto.km %></td>
                      <td>
                        <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" <%= auto.vendido ? 'checked' : null %> disabled>
                      </div>
                    </td>
                      <td class="text-start">$<span class="text-end"><%= auto.precio %></span></td>
                      <td><%= auto.cuotas %></td>
                      <td class="d-flex justify-content-around flex-wrap">
                        <a href="/products/detail/<%= auto.id %>" class="btn btn-sm btn-primary" style="width: 30px;"><i class="fas fa-eye"></i></a>
                        <a href="/products/edit/<%= auto.id %>" class="btn btn-sm btn-success" style="width: 30px;"><i class="fas fa-edit"></i></a>
                        <form action="/products/delete/<%= auto.id %>?_method=DELETE" method="POST">
                          <button type="submit"class="btn btn-sm btn-danger" style="width: 30px;"><i class="fas fa-trash-alt"></i></button>
                        </form>
                      </td>

                    </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </main>


    <%- include('../partials/footer')  %> 

  </body>
</html>
